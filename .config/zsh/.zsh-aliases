#!/bin/sh

# shortcuts
alias ls='exa --icons -a --group-directories-first'
alias e='exit'
alias s='source'
alias z='zsh'
alias r='ranger'
alias ch='chmod +x'
alias grep='rg'
alias c='clear'
alias nv='nvim'
alias lv='lvim'
alias hx='helix'
alias sn='sudo nvim'
alias nz='nvim $ZDOTDIR/.zshrc'
alias sz='exec zsh'
alias cz='cd $ZDOTDIR'
alias na='nvim $ZDOTDIR/.zsh-aliases'
alias sa='source $ZDOTDIR/.zsh-aliases'
alias nf='nvim $ZDOTDIR/.zsh-functions'
alias sf='source $ZDOTDIR/.zsh-functions'
alias ns='nvim ~/.config/sxhkd/sxhkdrc'
alias nb='nvim ~/.config/bspwm/bspwmrc'
