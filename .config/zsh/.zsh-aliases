# package management
alias pcs='pacman -Ss' 
alias prn='paru -S'
alias prm='sudo paru -R' 
alias prs='paru -Ss' 
alias prp='paru && paru -Sua'

alias ul='sudo rm /var/lib/pacman/db.lck'
alias cleanup='sudo paru -Rns $(paru -Qtdq)'

alias fltn='sudo flatpak install'
alias fltr='sudo flatpak remove'
alias flts='flatpak search'
alias fltp='sudo flatpak update'

# Xresources
alias use="xrdb merge"
alias load="kill -USR1 $(pidof st)"
alias rel="xrdb merge ~/.Xresources-onedark && kill -USR1 $(pidof st)"

# dwm shortcuts
alias nc='nvim config.def.h'
alias np='nvim patches.def.h'
alias rc='rm config.h'
alias cs='cd ~/.local/share/dwm'
alias dc='cd ~/.config/dwm'
alias bn='cd ~/.local/bin'
alias ct='cd ~/temp/'
alias cc='cd ~/.config/'
alias mk='sudo make install'

# ytp-dl
alias yta="youtube-dl --extract-audio --audio-format mp3 "
alias ytv="youtube-dl -f 136+bestaudio "


